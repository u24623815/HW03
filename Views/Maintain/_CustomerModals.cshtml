<!-- Edit Customer Modal -->
<div class="modal fade" id="editCustomerModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title">Edit Customer</h5>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form action="@Url.Action("Edit", "Customers")" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="customerId" name="customer_id" />
                <div class="modal-body">
                    <div class="form-group">
                        <label>First Name</label>
                        <input type="text" id="custFirstName" name="first_name" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text" id="custLastName" name="last_name" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" id="custEmail" name="email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" id="custPhone" name="phone" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>City</label>
                        <input type="text" id="custCity" name="city" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>State</label>
                        <input type="text" id="custState" name="state" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

